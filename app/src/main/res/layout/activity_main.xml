<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TalbeLayout"
    android:background="#fff"
    android:stretchColumns="1,2"
    android:padding="20dp"
    android:layout_gravity="center">



    <TableRow>

        <ImageView
            android:id="@+id/imgVwAtencao"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/atencao" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="20dp"
            android:id ="@+id/imgVwDarth"
            android:scaleType ="centerCrop"
            android:src="@drawable/darth_vader"/>

    </TableRow>

    <TableRow>
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="20dp"
            android:id ="@+id/imgVwBifurcacao"
            android:scaleType ="centerCrop"
            android:src="@drawable/bifurcacao"/>

        <ImageView
            android:id="@+id/imgVwPedestre"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pedestre" />

    </TableRow>



</TableLayout>