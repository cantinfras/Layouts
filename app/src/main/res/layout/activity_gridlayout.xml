<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:columnCount="4"
    android:rowCount="6"
    android:paddingBottom="45dp"
    android:paddingTop="45dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="3"
        android:layout_row="0"
        android:background="#444"
        android:text="/"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnUm"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="#444"
        android:text="1"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnDois"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_row="1"
        android:background="#444"
        android:text="2"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="2"
        android:layout_row="1"
        android:background="#444"
        android:text="3"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="3"
        android:layout_row="1"
        android:background="#444"
        android:text="*"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnQuatro"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="2"
        android:background="#444"
        android:text="4"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_row="2"
        android:background="#444"
        android:text="5"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="2"
        android:layout_row="2"
        android:background="#444"
        android:text="6"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnSubt"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="3"
        android:layout_row="2"
        android:background="#444"
        android:text="-"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnSete"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="3"
        android:background="#444"
        android:text="7"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnOito"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_row="3"
        android:background="#444"
        android:text="8"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnNove"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="2"
        android:layout_row="3"
        android:background="#444"
        android:text="9"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnSoma"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="3"
        android:layout_row="3"
        android:background="#444"
        android:text="+"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_rowSpan="3"
        android:layout_gravity="fill_vertical"

        />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="4"
        android:background="#444"
        android:text="0"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/btnZero2"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="2"
        android:layout_row="4"
        android:background="#444"
        android:text="00"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="5"
        android:background="#444"
        android:text="="
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        />


</GridLayout>